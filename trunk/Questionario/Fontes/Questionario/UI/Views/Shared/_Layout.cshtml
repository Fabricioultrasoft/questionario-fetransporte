<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content">
            <span><b>FETRANSPORTES</b></span>
            <ul>
                <li>@Html.ActionLink("Sair", "../","Home")</li>
                <li>@Html.ActionLink("Sobre", "Sobre","Home")</li>
                <li>@Html.ActionLink("Inicio", "/","Home")</li>
            </ul>
        </div>
    </header>

    <div class="main-content">
        @RenderBody()
    </div>
    <br />
    <footer>
        <div class="content">
            <span>Todos os direitos reservados.</span> 
            <span>&copy; 2013</span>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
<link href="~/Scripts/jsUI/plugins/modal/modal.css" rel="stylesheet" />
<link href="~/Content/css/normalize.css" rel="stylesheet" />
<link href="~/Content/css/mockup.css" rel="stylesheet" />
<link href="~/Content/css/ui.css" rel="stylesheet" />
<script type="text/javascript" src="http://codeorigin.jquery.com/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.json-2.4.js"></script>
<script src="~/Scripts/jsUI/plugins/modal/modal.js"></script>
<script type="text/javascript" src="~/Scripts/jsUI/dataExport.js"></script>
<script type="text/javascript" src="~/Scripts/jsUI/app.js"></script>
<script type="text/javascript">
    App.init();

    $('#openFrmSindicato').bind('click', App.openFrmCadastrarSindicado);
    $('#openFrmCadastrarEmpresa').bind('click', App.openFrmCadastrarEmpresa);
    $('#openFrmCadastrarfuncionario').bind('click', App.openFrmCadastrarfuncionario);
    $('#openFrmCadastrarSetorArea').bind('click', App.openFrmCadastrarSetorArea);
    $('#openFrmCadastrarCargo').bind('click', App.openFrmCadastrarCargo);
    $('#openFrmCadastrarUsuario').bind('click', App.openFrmCadastrarUsuario);
    
  
    $('#btnCancelar').bind('click', App.closeModal);
</script>

