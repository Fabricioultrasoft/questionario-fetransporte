@model IEnumerable<Aplicacao.dto.DtoSindicato>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sindicato";
}
<br />
<h2>Sindicatos (<a href="javascript:;" id="openFrmSindicato">Cadastrar Novo</a>)</h2> <br />
<table class="grid">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody id="lista">
        @foreach (var sindicato in @Model)
        {
            <tr>
                <td>@sindicato.SindicatoID</td>
                <td>@sindicato.NomeSindicato</td>
                <td>
                    <a href="javascript:;" data-id="@sindicato.SindicatoID"><img src="~/Content/imagens/icones/b_edit.png" border="0" /></a>
                    <a href="javascript:;" data-id="@sindicato.SindicatoID"><img src="~/Content/imagens/icones/b_trash.png" border="0" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

